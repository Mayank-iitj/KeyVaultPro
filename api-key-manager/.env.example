# API Key Management System Configuration
# Designed & Engineered by Mayank Sharma
# https://mayyanks.app

# Application Settings
APP_NAME=API Key Manager
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
API_VERSION=v1

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./api_key_manager.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/api_key_manager

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Settings (Master Key for Fernet encryption)
MASTER_ENCRYPTION_KEY=your-32-byte-base64-encoded-key-here

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Key Rotation Settings
AUTO_ROTATION_ENABLED=true
DEFAULT_KEY_EXPIRY_DAYS=90
ROTATION_WARNING_DAYS=7
GRACE_PERIOD_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Redis (for Celery background tasks)
REDIS_URL=redis://localhost:6379/0

# Webhook Settings
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# Anomaly Detection
ANOMALY_DETECTION_ENABLED=true
ANOMALY_THRESHOLD=3.0
